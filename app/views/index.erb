<% if logged_in? %>
    <h1 class="wo-logger">Workout logger - Welcome <%= current_user.username %>!</h1>
    
    <br>
    <h2>Workouts</h2>
    <% @workouts.each do |workout| %>
        <% @user_of_workout = User.find(workout.user_id) %>
        <h3><a href='/workouts/<%= workout.id %>'><%= workout.title %></a> - <a href='/users/<%= @user_of_workout.slug %>'><%= @user_of_workout.username %></a></h3>
        <% workout.exercises.each do |exercise| %>
            <p><%= exercise.exercise_name %><p>
        <% end %>
    <% end %>
    <a href='/logout'>Log Out</a>
<% else %>
    <h1>Welcome to Workout Logger!</h1>
    <img src='images/Arnold_Schwarzenegger.jpg' alt='Arnold Schwarzenegger' width='560' height='323'>
    <h4>Please <a href='/signup'>sign up</a> or <a href='/login'>log in</a>.</h4>
<% end %>


